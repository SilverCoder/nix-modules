{
  "editor": "hx",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); user=$(whoami); dir=\"$cwd\"; [[ \"$dir\" == \"$HOME\"* ]] && dir=\"~${dir#$HOME}\"; IFS='/' read -ra parts <<< \"$dir\"; if [[ ${#parts[@]} -gt 3 ]] && [[ \"$dir\" != \"~\" ]]; then dir=\"…/${parts[-3]}/${parts[-2]}/${parts[-1]}\"; fi; git_branch=\"\"; if git -C \"$cwd\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$cwd\" -c core.filemode=false --no-optional-locks branch --show-current 2>/dev/null || echo \"\"); if [[ -n \"$branch\" ]]; then git_branch=\" $branch\"; if [[ -n $(git -C \"$cwd\" -c core.filemode=false --no-optional-locks status --porcelain 2>/dev/null) ]]; then git_branch=\"$git_branch ●\"; fi; fi; fi; current_time=$(date +%R); printf \"\\033[38;2;214;93;14m\\033[38;2;251;241;199m󰌽 ${user}\\033[0m\"; printf \"\\033[38;2;215;153;33m\\033[38;2;251;241;199m ${dir} \\033[0m\"; if [[ -n \"$git_branch\" ]]; then printf \"\\033[38;2;104;157;106m\\033[38;2;251;241;199m${git_branch} \\033[0m\"; fi; printf \"\\033[38;2;60;56;54m\\033[38;2;251;241;199m  ${current_time} \\033[0m\""
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "deny": [
      "Bash(curl:*)",
      "Read(**/.git-crypt)",
      "Read(**/.git)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)"
    ]
  }
}
